rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own private data
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the main 'posts' collection (if used elsewhere)
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.uid == request.auth.uid;
    }

    // Correct rules for the 'community_posts' collection
    match /community_posts/{postId} {
      // Any authenticated user can read all posts
      allow read: if request.auth != null;

      // A user can create a post if they are logged in AND the post's authorId matches their own uid.
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;

      // Any authenticated user can update a post (e.g., to like it).
      // Deleting is still restricted to the author.
      allow update: if request.auth != null;
      allow delete: if request.auth != null && resource.data.authorId == request.auth.uid;

      // Rules for the 'comments' subcollection
      match /comments/{commentId} {
        // Any authenticated user can read all comments
        allow read: if request.auth != null;

        // Any authenticated user can create a comment
        allow create: if request.auth != null;
      }
    }
  }
}